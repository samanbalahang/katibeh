# =============================================
# WordPress Git Ignore Configuration
# =============================================

# CORE WORDPRESS FILES
# =====================
# Exclude WordPress core files - these should not be versioned
/wp-admin/
/wp-includes/
/index.php
/license.txt
/readme.html
/wp-*.php
/xmlrpc.php

# WP-CONTENT DIRECTORY
# ====================
# Core content directory structure
/wp-content/index.php
/wp-content/languages/

# Plugins (exclude all by default)
/wp-content/plugins/
/wp-content/plugins/index.php
# Uncomment to whitelist specific plugins:
# !/wp-content/plugins/your-custom-plugin/

# Themes (exclude all by default)
/wp-content/themes/index.php
# Uncomment to whitelist specific themes:
# !/wp-content/plugins/your-custom-theme/

# Example/Demo content
/wp-content/themes/twenty*/
/wp-content/plugins/hello.php

# Uploads - user-generated content
/wp-content/uploads/

# PROJECT SPECIFIC EXCLUSIONS
# ===========================
# Development and build dependencies
/node_modules/
/html/node_modules

# Build artifacts and generated files
/html/dist/images/
/html/dist/video/
/html/video/
/video/

# CONFIGURATION FILES
# ===================
# Sensitive configuration - use environment-specific configs instead
wp-config.php
/.htaccess

# LOGS AND TEMPORARY FILES
# ========================
*.log
*.tmp
*.temp

# ENVIRONMENT AND IDE FILES
# =========================
# Development environment files
.env
.env.local
.env.production
.env.development

# IDE specific files
.vscode/
.idea/
*.swp
*.swo

# SYSTEM FILES
# ============
.DS_Store
Thumbs.db